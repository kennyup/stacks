{
  "version": "1.0.2-*",
  "authors": [ "Slalom Architect Academy" ],
  "packOptions": {
    "tags": [ "slalom", "stacks" ],
    "licenseUrl": "http://www.apache.org/licenses/LICENSE-2.0",
    "requireLicenseAcceptance": true,
    "summary": "The Serilog Logging library for Slalom Stacks."
  },
  "dependencies": {
    "Newtonsoft.Json": "9.0.2-beta1",
    //"StyleCop.Analyzers": {
    //  "version": "1.0.0",
    //  "type": "build"
    //},
    "Serilog.Exceptions": "2.2.1",
    "Slalom.Stacks": "1.0.1-*",
    "Autofac": "4.2.1",
    "NETStandard.Library": "1.6.1",
    "Serilog": "2.4.0-dev-00767",
    "Serilog.Settings.Configuration": "2.2.0",
    "System.Security.Claims": "4.3.0"
  },

  "buildOptions": {
    "preserveCompilationContext": true,
    "additionalArguments": [ "/ruleset:../../Slalom.ruleset", "/additionalfile:../../stylecop.json" ],
    "xmlDoc": true
  },

  "frameworks": {
    "netcoreapp1.0": {
      "imports": [
        "dotnet54",
        "portable-net45+win8"
      ]
    },
    "net461": {
      "dependencies": {
        "System.Reflection": "4.3.0"
      },
      "imports": "dnxcore50"
    }
  },

  "scripts": {
    "postcompile": [
      "dotnet pack --no-build --configuration %compile:Configuration%",
      "xcopy .\\bin\\debug\\*.nupkg c:\\nuget\\ /y"
    ]
  }
}
